---
// src/pages/resources/starters.astro
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const starters = await getCollection('starters');
---

<Layout title="Starter Projects">
  <main class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold mb-8">Starter Projects</h1>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {starters.map(starter => (
        <div class="bg-white shadow-md rounded-lg overflow-hidden">
          <img src={starter.data.coverImage} alt={starter.data.title} class="w-full h-48 object-cover" />
          <div class="p-4">
            <h3 class="text-xl font-semibold mb-2">
              <a href={starter.data.demoUrl} class="text-blue-600 hover:underline" target="_blank" rel="noopener noreferrer">
                {starter.data.title}
              </a>
            </h3>
            <p class="text-sm text-gray-600 mb-4">{starter.data.description}</p>
            <div class="flex flex-wrap gap-2 mb-4">
              {starter.data.technologies.map(tech => (
                <span class="bg-gray-200 text-gray-700 px-2 py-1 rounded-full text-xs">{tech}</span>
              ))}
            </div>
            <a
              href={starter.data.projectUrl}
              class="inline-block bg-blue-500 text-white text-sm px-4 py-2 rounded hover:bg-blue-600 transition-colors"
              target="_blank"
              rel="noopener noreferrer"
            >
              View Project
            </a>
          </div>
        </div>
      ))}
    </div>
  </main>
</Layout>
