---
const { entry } = Astro.props;
---

<div class="bg-white shadow-md rounded-lg p-6 mb-6" data-entry-date={entry.data.date.toISOString()}>
    <div class="flex justify-between items-start mb-2">
        <a href={`/journal/${entry.slug}`} class="text-2xl font-bold hover:text-blue-600">
            {entry.data.title}
        </a>
        <span class="text-gray-500">
            {entry.data.date.toLocaleDateString()}
        </span>
    </div>
    <p class="text-gray-700 mb-4">
        {entry.data.description}
    </p>
    <div class="flex flex-wrap gap-2">
        {entry.data.tags.map(tag => (
            <span class="bg-gray-200 text-gray-700 px-2 py-1 rouned text-sm">
                {tag}
            </span>
        ))}
    </div>
</div>
