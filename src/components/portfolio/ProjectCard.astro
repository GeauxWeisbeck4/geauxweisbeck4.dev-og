---
const { project } = Astro.props;
---

<div data-category={project.data.category} class="bg-white rounded-lg shadow-md overflow-hidden">
    <img src={project.data.coverImage.src} alt={project.data.coverImage.alt} class="w-full h-48 object-cover" />
    <div class="p-4">
        <h2 class="text-xl font-semibold mb-2">{project.data.title}</h2>
        <p class="text-gray 600 mb-4">{project.data.description}</p>
        <div class="text-gray-600 mb-4">
            <span class="text-sm text-gray-500">Progress: {project.data.progress}%</span>
            <a href={`/portfolio/${project.slug}`} class="text-blue-500 hover:underline">View Project</a>
        </div>
    </div>
</div>
