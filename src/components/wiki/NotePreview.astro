---
const { note } = Astro.props;
---

<div class="bg-white p-6 rounded-lg shadow-md">
    <h2 class="text-2xl font-semibold mb-2">
        <a href={`/wiki/note/${note.slug}`} class="hover:underline">{note.data.title}</a>
    </h2>
    <p class="text-gray-600 mb-2">{note.data.date.toLocaleDateString()}</p>
    {note.data.description && <p class="text-gray-700">{note.data.description}</p>}
</div>
